#include <iostream>
using namespace std;

int main(int argc, char *argv[]) {
    int number;
    cin >> number;
    if (number == 0) {
        cout << "0" << endl;
        return 0;
    }
    const char digits[] = "0123456789ABCDEF";
    char ans[8];
    int index = 0;
    while (number > 0) {
        ans[index] = digits[number % 16];
        number /= 16;
        index++;
    }

    for (int i = index - 1; i >= 0; i--) {
        cout << ans[i];
    }
    cout << endl;

    return 0;
}
