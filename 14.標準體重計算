#include <iostream>
using namespace std;

int main(int argc, char *argv[]) {
   int height, gender;
    while (cin >> height >> gender) {
        double ans;
        if(gender==1){
            ans=(height-80)*0.7;//男生標準體重＝(身高－80 )*0.7
        }else{
            ans=(height-70)*0.6;//女生標準體重＝(身高－70)*0.6
        }
        cout << fixed;
        cout.precision(1); //取到小數點以下第一位
        cout << ans << endl;
    }
	return 0;
}
