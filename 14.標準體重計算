#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[]) {
   int height, gender;
    while (scanf("%d%d", &height, &gender) != EOF) {
        double ans;
        if(gender==1){
            ans=(height-80)*0.7;
        }else{
            ans=(height-70)*0.6;
        }
        printf("%.1f\n",ans);
    }
	return 0;
}
